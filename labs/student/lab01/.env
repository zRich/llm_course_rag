# RAG系统环境配置

# 数据库配置
DATABASE_URL="postgresql://rag_user:rag_password@localhost:15432/rag_db"

# Redis配置（可选，用于缓存）
REDIS_URL="redis://localhost:16379/0"

# Qdrant配置（向量数据库）
QDRANT_URL="http://localhost:6333"
QDRANT_API_KEY=""

# 嵌入模型配置
EMBEDDING_PROVIDER="local"
LOCAL_EMBEDDING_MODEL="sentence-transformers/paraphrase-multilingual-MiniLM-L12-v2"
LOCAL_EMBEDDING_DIMENSION=384

# 火山引擎配置（用于大语言模型）
VOLCENGINE_API_KEY="3779d372-3831-4b15-ad26-bf3e634d36ae"
VOLCENGINE_BASE_URL="https://ark.cn-beijing.volces.com/api/v3"
VOLCENGINE_MODEL="doubao-seed-1-6-250615"
# VOLCENGINE_EMBEDDING_MODEL="doubao-embedding-v1"  # 不使用豆包嵌入模型

# 应用配置
APP_HOST="0.0.0.0"
APP_PORT=8000
DEBUG=true

# 文档处理配置
CHUNK_SIZE=500
CHUNK_OVERLAP=50
MAX_FILE_SIZE=10485760

# 检索配置
TOP_K=5
SIMILARITY_THRESHOLD=0.7

# LLM配置
MAX_TOKENS=2000
TEMPERATURE=0.7